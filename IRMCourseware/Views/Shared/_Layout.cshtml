            </li>
            <li class="nav-item@(ViewBag.Current == "Groups" ? " active" : "")">
                @Html.ActionLink("Groups", "Index", "Groups", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item@(ViewBag.Current == "Documents" ? " active" : "")">
                @Html.ActionLink("Documents", "Index", "Documents", null, new { @class = "nav-link" })
            </li>

