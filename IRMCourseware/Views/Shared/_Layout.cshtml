            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>*@
      
    </nav>
  
    <div id="wrapper">

        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    
                    <a href=@Url.Action("GroupDocuments/", "Home") style="@((ViewBag.SelectedID == null) ? "color:#fff" : "")">All Documents</a>
                </li>
               
                @Html.Action("LoadGroupsListPartial", "Home", new { selectedID = ViewBag.SelectedID })
            </ul>
        </div>
        <div id="page-content-wrapper">
            <div class="container-fluid img-thumbnail" style="background-color:white;display:block">
                @RenderBody()
            </div>
        </div>
