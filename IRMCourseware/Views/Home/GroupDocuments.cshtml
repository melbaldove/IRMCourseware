@model List<Document>
@{
    ViewBag.Title = "Documents";
    ViewBag.Current = "Documents";
    
}

<h1 class="text-md-center">@ViewBag.ReportTitle</h1>
<div class="row container report-division">
    @if(Model.Where(x => x.FileType.Equals(".doc") || x.FileType.Equals(".docx") || x.FileType.Equals(".pdf")).Count() > 0)
    {
        <h2>Documents</h2>
    }
    

    @foreach (var document in Model.Where(x => x.FileType.Equals(".doc") || x.FileType.Equals(".docx") || x.FileType.Equals(".pdf")))
    {
        <div class="col-md-4">
            <div class="card">
                <div class="text-md-center">
                    <a href="@Url.Action("RenderReport", new { id = document.ID, groupID = ViewBag.SelectedID})">
                        <img src="@Url.Content(document.Directory + document.FileName + ".jpg")" class="card-img-top" style="max-width:100%;height:350px" />
                    </a>
                </div>

                <div class="card-block">
                    <h4 class="card-title">@(document.Name)</h4>
                    <div class="row">
                        <div class="col-md-7">
                            <strong>File Size </strong>@document.FileSize
                        </div>
                        <div class="col-md-5 text-md-right">
                            <a href="@Url.Content(document.Directory + document.FileName + document.FileType)" download="@(document.Name + document.FileType)" class="btn btn-primary btn-sm">Download</a>
                        </div>

                    </div>

                </div>
            </div>
        </div>



    }
</div>

<div class="row container report-division">
    @if (Model.Where(x => x.FileType.Equals(".ppt") || x.FileType.Equals(".pptx")).Count() > 0)
    {
        <h2>Powerpoints</h2>
