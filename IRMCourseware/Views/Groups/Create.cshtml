@model Group

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Groups";
    ViewBag.Current = "Groups";
    ViewBag.NavTitle = "Manage Groups";
}



<h2>Groups</h2>
<div class="form">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h4>Create Group</h4>
            <hr />
            <div class="form-group">
                @Html.Label("Group Number", new { @class = "col-md-2" })
                @Html.EditorFor(model => model.GroupNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GroupNo, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-md-2" })

                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })

            </div>

                <div class="form-group">
                    @Html.Label("Members", new { @class = "col-md-2" })

                    @Html.EditorFor(model => model.GroupMembers, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GroupMembers, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-primary" />
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    }
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>








@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
